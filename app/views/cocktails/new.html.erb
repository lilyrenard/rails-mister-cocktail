<div class="header">
  <h1 class="orange">ADD A NEW COCKTAIL</h1>
</div>

<div class="small-container">
  <%= cl_image_tag("add", crop: :fill) %>
</div>


<div class="small-container">
  <div class="mt-3">
    <div class="cocktail-form">
      <%= simple_form_for [@cocktail] do |f| %>
        <%= f.input :name %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.submit "Add", class: "btn btn-danger" %>
      <% end %>
    </div>
  </div>
</div>
