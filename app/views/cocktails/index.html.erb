<%= render "shared/banner" %>

<div class="header">
  <h1><span class="orange"><%= @cocktails.length %></span> COCKTAILS </h1>
</div>

<div class="container">
  <% @cocktails.each do |cocktail|%>
    <div class="col-xs-12 col-sm-3">
      <div class="cocktail-card">
        <div class="cocktail-image">
          <%= cl_image_tag cocktail.photo, crop: :fill %>
        </div>
        <div class="cocktail-name orange">
          <h3><%= cocktail.name%></h3>
        </div>
        <div class="overlay">
          <div class="text"><%= link_to "See", cocktail_path(cocktail.id) %></div>
        </div>
      </div>
    </div>
  <% end%>
</div>
